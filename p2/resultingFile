        servaddr2.sin_port = htons(port); //port number being set
    
        //ip address specified below by the user  
        if (inet_pton(AF_INET, ipaddr, &servaddr2.sin_addr) <= 0){
            perror("inet_pton error");
            exit(1);
        }
